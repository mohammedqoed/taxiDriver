<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:clipToPadding="false"
    android:elevation="15dp"
    tools:context="com.bedetaxi.bedetaxidriver.UserDataFragment">

    <!-- TODO: Update blank fragment layout -->




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="100"
            android:id="@+id/mainlinear"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_alignBottom="@+id/bidditaxi"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/UserProfileIcon"
                android:src="@drawable/profile"
                android:layout_weight="30"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:weightSum="3"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"

                    android:layout_weight="3"
                    android:weightSum="3"
                    >
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="mohammad"

                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/usericon"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"

                    android:layout_weight="3"
                    android:weightSum="3"
                    >
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="0599319499"

                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/phone"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"

                    android:layout_weight="3"
                    android:weightSum="3"
                    >
                    <TextView
                        android:id="@+id/dis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Ramallah"

                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/dist"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"

                    android:layout_weight="3"
                    android:weightSum="3"
                    >
                    <TextView
                        android:id="@+id/pick"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:text="Abu Qash"
                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:textSize="20sp"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pick"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/linearbutton"
                android:weightSum="2"
                >

                <Button
                    android:id="@+id/call"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:text="تنبيه بالوصول"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:background="#333333"
                    android:textColor="#FFFFFF"
                    android:onClick="openCallIntent" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_weight="1"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:text="الغاء"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:background="#FFCD00"/>
            </LinearLayout>


        </LinearLayout>
</FrameLayout>